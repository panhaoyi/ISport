<?xml version="1.0" encoding="UTF-8"?>
<!-- 右边带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="15dp"
                android:bottomRightRadius="15dp" android:bottomLeftRadius="0dp" />
            <stroke android:width="1dp" android:color="#DDDDDD" />
        </shape>
    </item>
</layer-list>