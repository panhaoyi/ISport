<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_login">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="223dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/frame_login"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="263dp"
        android:src="@drawable/ic_phone"/>
    <EditText
        android:id="@+id/phonenumber_login"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="90dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:text="@string/input_phonenumber"
        android:textSize="12sp"
        android:textColor="#9b9b9b" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="313dp"
        android:src="@drawable/ic_password"/>
    <EditText
        android:id="@+id/password_login"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="90dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:text="@string/input_password1"
        android:textSize="12sp"
        android:textColor="#9b9b9b"  />

    <Button
        android:id="@+id/login_login"
        android:layout_width="196dp"
        android:layout_height="34dp"
        android:layout_marginTop="381dp"
        android:layout_marginStart="82dp"
        android:background="@drawable/bt_login"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/quicklogin_login"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="425dp"
        android:text="快速登录"
        android:textColor="#9b9b9b"
        android:textSize="10sp"/>
    
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:layout_marginTop="424dp"
        android:layout_marginStart="179dp"
        android:background="#979797"/>

    <TextView
        android:id="@+id/register_login"
        android:layout_width="40dp"
        android:layout_height="14dp"
        android:layout_marginStart="194dp"
        android:layout_marginTop="425dp"
        android:text="手机注册"
        android:textColor="#9b9b9b"
        android:textSize="10sp"/>
    
    <TextView
        android:id="@+id/forget_pasword"
        android:layout_width="46dp"
        android:layout_height="13dp"
        android:layout_marginTop="414dp"
        android:layout_marginStart="286dp"
        android:text="忘记密码?"
        android:textColor="#f5b823"
        android:textSize="9sp"/>

    <LinearLayout
        android:layout_width="81dp"
        android:layout_height="1dp"
        android:layout_marginTop="525dp"
        android:layout_marginStart="51dp"
        android:background="#979797"/>

    <TextView
        android:id="@+id/trying_login"
        android:layout_width="66dp"
        android:layout_height="18dp"
        android:layout_marginTop="517dp"
        android:layout_marginStart="147dp"
        android:text="第三方登录"
        android:textColor="#fbfbfb"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="81dp"
        android:layout_height="1dp"
        android:layout_marginTop="525dp"
        android:layout_marginStart="232dp"
        android:background="#979797"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="557dp"
        android:layout_marginStart="83dp"
        android:src="@drawable/ic_qq"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="557dp"
        android:layout_marginStart="167dp"
        android:src="@drawable/ic_wechat"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="557dp"
        android:layout_marginStart="246dp"
        android:src="@drawable/ic_weblog"/>

</RelativeLayout>