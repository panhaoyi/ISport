<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_find_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="211dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="223dp"
        android:background="@drawable/frame_register" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="263dp"
        android:src="@drawable/ic_phone" />

    <EditText
        android:id="@+id/phonenumber_find_password"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="250dp"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:hint="@string/input_phonenumber"
        android:textColorHint="#9b9b9b"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/get_verification_find_password"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/frame_verification"
        android:gravity="center"
        android:text="点击获取验证码"
        android:textColor="#9b9b9b"
        android:textSize="9sp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="313dp"
        android:src="@drawable/ic_verification" />

    <EditText
        android:id="@+id/verification_find_password"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="300dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="请输入验证码"
        android:textColorHint="#9b9b9b"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="361dp"
        android:src="@drawable/ic_password" />

    <EditText
        android:id="@+id/password_find_password"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="348dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="@string/input_password2"
        android:textColorHint="#9b9b9b"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <Button
        android:id="@+id/change_password_find_password"
        android:layout_width="196dp"
        android:layout_height="34dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="417dp"
        android:background="@drawable/bt_login"
        android:text="修改密码"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/login_find_password"
        android:layout_width="87dp"
        android:layout_height="24dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="454dp"
        android:gravity="center"
        android:text="返回登录界面"
        android:textColor="#9b9b9b"
        android:textSize="10sp" />
</RelativeLayout>