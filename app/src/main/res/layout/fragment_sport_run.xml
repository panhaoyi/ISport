<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--路线按钮-->
    <ImageView
        android:id="@+id/route_run_sport"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_route" />

    <TextView
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="104dp"
        android:text="路线"
        android:textColor="#9b9b9b"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/track_run_sport"
        android:layout_width="67dp"
        android:layout_height="28dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="98dp"
        android:background="@drawable/border_track"
        android:gravity="center"
        android:text="轨迹"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/distance_run_sport"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="0.00"
        android:textColor="#9b9b9b"
        android:textSize="70sp" />

    <TextView
        android:layout_width="28dp"
        android:layout_height="20dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="200dp"
        android:text="公里"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/duration_run_sport"
        android:layout_width="92dp"
        android:layout_height="17dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:text="0 h"
        android:textColor="#9f9a9a"
        android:textSize="12sp" />

    <Button
        android:id="@+id/start_run_sport"
        android:layout_width="121dp"
        android:layout_height="66dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/bt_go"
        android:gravity="center"
        android:text="GO!"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

</RelativeLayout>