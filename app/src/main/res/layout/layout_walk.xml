<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_walk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <TextView
        android:id="@+id/distance_walk"
        android:layout_width="201dp"
        android:layout_height="117dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="106dp"
        android:gravity="center"
        android:text="0.00"
        android:textColor="#9b9b9b"
        android:textSize="90sp" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="17dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="214dp"
        android:gravity="center"
        android:text="距离(公里)"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/step_walk"
        android:layout_width="77dp"
        android:layout_height="33dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="248dp"
        android:text="3478"
        android:textColor="#db6892"
        android:textSize="24sp" />

    <TextView
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/step_walk"
        android:layout_alignEnd="@+id/step_walk"
        android:text="步"
        android:textColor="#db6892"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/speed_walk"
        android:layout_width="63dp"
        android:layout_height="37dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="348dp"
        android:gravity="center"
        android:text="00'00"
        android:textColor="#9b9b9b"
        android:textSize="25dp" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="16dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="387dp"
        android:gravity="center"
        android:text="分钟/公里"
        android:textColor="#9b9b9b"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/duration_walk"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="340dp"
        android:gravity="center"
        android:text="00:25:55"
        android:textColor="#9b9b9b"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="387dp"
        android:gravity="center"
        android:text="用时"
        android:textColor="#9b9b9b"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/map_walk"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="287dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/ic_map" />

    <TextView
        android:layout_width="23dp"
        android:layout_height="16dp"
        android:layout_marginStart="289dp"
        android:layout_marginTop="387dp"
        android:text="GPS"
        android:textColor="#9b9b9b"
        android:textSize="11sp" />

    <Button
        android:id="@+id/camera_walk"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="494dp"
        android:background="@drawable/ic_camera" />

    <Button
        android:id="@+id/start_pause_walk"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="467dp"
        android:background="@drawable/bt_pause" />

    <Button
        android:id="@+id/stop_walk"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="494dp"
        android:background="@drawable/bt_stop" />

    <TextView
        android:layout_width="44dp"
        android:layout_height="16dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="530dp"
        android:text="长按结束"
        android:textColor="#9b9b9b"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="#444444" />
</RelativeLayout>