<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--该页面从数据库中获取当天的健走信息并显示-->
    <!--网络获取天气图标-->
    <ImageView
        android:id="@+id/weather_icon_walk_home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_cloud" />

    <TextView
        android:id="@+id/weather_walk_home"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="47dp"
        android:text="@string/weather"
        android:textColor="#9b9b9b"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/timescount_walk_home"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="303dp"
        android:layout_marginTop="34dp"
        android:text="0 次"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/speed_walk_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="303dp"
        android:layout_marginTop="56dp"
        android:text="0.0 km/h"
        android:textColor="@color/colorWhite"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/step_walk_home"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/border_count"
        android:gravity="center"
        android:text="0 步"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/frame_home_walk" />

    <TextView
        android:id="@+id/distance_walk_home"
        android:layout_width="119dp"
        android:layout_height="67dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="147dp"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/colorWhite"
        android:textSize="46sp" />

    <TextView
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:layout_marginStart="218dp"
        android:layout_marginTop="179dp"
        android:text="公里"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/duration_walk_home"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:gravity="center"
        android:text="0 h"
        android:textColor="#9b9b9b"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="330dp"
        android:background="#979797" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="335dp"
        android:text="@string/history_trend"
        android:textColor="#9b9b9b"
        android:textSize="9sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/home_walk_history_chart"
        android:layout_width="match_parent"
        android:layout_marginTop="345dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_height="137dp" />
</RelativeLayout>