<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_find"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#333333">
    <!--主界面-运动圈-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="286dp"
            android:layout_height="31dp"
            android:background="@drawable/border_search"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search"/>
        <EditText
            android:id="@+id/search_find"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginStart="46dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:inputType="text"
            android:hint="搜索用户,话题,活动"
            android:textColorHint="#9b9b9b"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="315dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_contacts"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="42dp">
        <TextView
            android:id="@+id/item_topic"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="56dp"
            android:gravity="center"
            android:text="话题"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/selected_topic"
            android:layout_width="36dp"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="73dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/item_activity"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="222dp"
            android:gravity="center"
            android:text="活动"
            android:textColor="#9b9b9b"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/selected_activity"
            android:layout_width="36dp"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="238dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>