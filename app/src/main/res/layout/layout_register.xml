<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_login">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="211dp"
        android:layout_marginTop="223dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/frame_register"/>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="263dp"
        android:src="@drawable/ic_phone"/>
    <EditText
        android:id="@+id/phonenumber_register"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginStart="90dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:text="@string/input_phonenumber"
        android:textSize="12sp"
        android:textColor="#9b9b9b" />

    <TextView
        android:id="@+id/get_verification_register"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginTop="265dp"
        android:layout_marginStart="235dp"
        android:gravity="center"
        android:background="@drawable/frame_verification"
        android:text="点击获取验证码"
        android:textColor="#9b9b9b"
        android:textSize="9sp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="313dp"
        android:src="@drawable/ic_verification"/>
    <EditText
        android:id="@+id/verification_register"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="90dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:text="请输入验证码"
        android:textSize="12sp"
        android:textColor="#9b9b9b"  />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="361dp"
        android:src="@drawable/ic_password"/>
    <EditText
        android:id="@+id/password_register"
        android:layout_width="231dp"
        android:layout_height="50dp"
        android:layout_marginTop="348dp"
        android:layout_marginStart="90dp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:text="@string/input_password1"
        android:textSize="12sp"
        android:textColor="#9b9b9b"  />

    <Button
        android:id="@+id/register_register"
        android:layout_width="196dp"
        android:layout_height="34dp"
        android:layout_marginTop="417dp"
        android:layout_marginStart="82dp"
        android:background="@drawable/button_login"
        android:text="@string/register"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/login_register"
        android:layout_width="67dp"
        android:layout_height="14dp"
        android:layout_marginTop="459dp"
        android:layout_marginStart="147dp"
        android:text="isport帐号登录"
        android:textColor="#9b9b9b"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="128dp"
        android:layout_height="13dp"
        android:layout_marginTop="539dp"
        android:layout_marginStart="74dp"
        android:text="* 点击注册,即表示您已经并同意"
        android:textColor="#fbfbfb"
        android:textSize="9sp"/>
    <TextView
        android:layout_width="84dp"
        android:layout_height="13dp"
        android:layout_marginTop="539dp"
        android:layout_marginStart="202dp"
        android:text="isport用户协议"
        android:textColor="#0055aa"
        android:textSize="9sp"/>
</RelativeLayout>